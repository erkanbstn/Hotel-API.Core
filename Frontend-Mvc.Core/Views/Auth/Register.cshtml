@model RegisterViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html class="h-100" lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>Geo Register</title>
    <!-- Favicon icon -->
    <link rel="icon" type="image/png" sizes="16x16" href="~/adminweb/assets/images/favicon.png">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">
    <link href="~/adminweb/css/style.css" rel="stylesheet">

</head>
<body class="h-100">

    <div id="preloader">
        <div class="loader">
            <svg class="circular" viewBox="25 25 50 50">
                <circle class="path" cx="50" cy="50" r="20" fill="none" stroke-width="3" stroke-miterlimit="10" />
            </svg>
        </div>
    </div>
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <div>
        <div class="login-form-bg h-100">
            <div class="container h-100">
                <div class="row justify-content-center h-100">
                    <div class="col-xl-6">
                        <div class="form-input-content">
                            <div class="card login-form mb-0">
                                <div class="card-body pt-5">
                                    <a class="text-center" href="https://www.linkedin.com/in/erkanbostan/" target="_blank"> <h4>Geo Register</h4></a>
                                    <form class="mt-5 mb-5 login-input" method="post">
                                        <div class="form-group">
                                            <input type="text" asp-for="UserName" class="form-control" placeholder="Kullanıcı Adı" required>
                                        </div>
                                        <div class="form-group">
                                            <input type="text" asp-for="Name" class="form-control" placeholder="İsim" required>
                                        </div>
                                        <div class="form-group">
                                            <input type="email" asp-for="Email" class="form-control" placeholder="Email" required>
                                        </div>
                                        <div class="form-group">
                                            <input type="password" asp-for="Password" class="form-control" placeholder="Parola" required>
                                        </div>
                                        <div class="form-group">
                                            <input type="password" asp-for="ConfirmPassword" class="form-control" placeholder="Parola Tekrar" required>
                                        </div>
                                        <button class="btn login-form__btn submit w-100">Kayıt Ol</button>
                                    </form>
                                    <p class="mt-5 login-form__footer">Hesabın var mı? Şimdi <a href="~/Auth/LogIn" class="text-primary">Giriş Yap</a></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/adminweb/plugins/common/common.min.js"></script>
    <script src="~/adminweb/js/custom.min.js"></script>
    <script src="~/adminweb/js/settings.js"></script>
    <script src="~/adminweb/js/gleek.js"></script>
    <script src="~/adminweb/js/styleSwitcher.js"></script>
</body>
</html>






