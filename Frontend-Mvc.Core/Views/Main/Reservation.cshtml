@model BookingViewModel
@{
    ViewData["Title"] = "Reservation";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h6 class="section-title text-center text-primary text-uppercase">Oda Rezervasyonu</h6>
            <h1 class="mb-5">Lüks Bir Odayı <span class="text-primary text-uppercase">Rezerve Edin</span></h1>
        </div>
        <div class="row g-5">
            <div class="col-lg-6">
                <div class="row g-3">
                    <div class="col-6 text-end">
                        <img class="img-fluid rounded w-75 wow zoomIn" data-wow-delay="0.1s" src="~/hotel/img/about-1.jpg" style="margin-top: 25%;">
                    </div>
                    <div class="col-6 text-start">
                        <img class="img-fluid rounded w-100 wow zoomIn" data-wow-delay="0.3s" src="~/hotel/img/about-2.jpg">
                    </div>
                    <div class="col-6 text-end">
                        <img class="img-fluid rounded w-50 wow zoomIn" data-wow-delay="0.5s" src="~/hotel/img/about-3.jpg">
                    </div>
                    <div class="col-6 text-start">
                        <img class="img-fluid rounded w-75 wow zoomIn" data-wow-delay="0.7s" src="~/hotel/img/about-4.jpg">
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="wow fadeInUp" data-wow-delay="0.2s">
                    <form method="post">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" asp-for="Name" id="name" placeholder="Adınız">
                                    <label for="name">Adınız</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="email" class="form-control" asp-for="Email" id="email" placeholder="Emailiniz">
                                    <label for="email">Emailiniz</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating date" id="date3" data-target-input="nearest">
                                    <input type="date" class="form-control datetimepicker-input" asp-for="CheckIn" id="checkin" placeholder="Check In" data-target="#date3" data-toggle="datetimepicker" />
                                    <label for="checkin">Giriş Tarihi</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating date" id="date4" data-target-input="nearest">
                                    <input type="date" class="form-control datetimepicker-input" asp-for="CheckOut" id=" checkout" placeholder="Check Out" data-target="#date4" data-toggle="datetimepicker" />
                                    <label for="checkout">Çıkış Tarihi</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <select asp-for="AdultCount" class="form-select" id="select1">
                                        <option value="1">1 Yetişkin</option>
                                        <option value="2">2 Yetişkin</option>
                                        <option value="3">3 Yetişkin</option>
                                    </select>
                                    <label for="select1">Yetişkin Sayısı Seçin</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <select asp-for="ChildCount" class="form-select" id="select2">
                                        <option value="1">1 Çocuk</option>
                                        <option value="2">2 Çocuk</option>
                                        <option value="3">3 Çocuk</option>
                                    </select>
                                    <label for="select2">Çocuk Sayısı Seçin</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-floating">
                                    <select asp-for="RoomCount" class="form-select" id="select3">
                                        <option value="1">1 Oda</option>
                                        <option value="2">2 Oda</option>
                                        <option value="3">3 Oda</option>
                                    </select>
                                    <label for="select3">Oda Sayısı Seçin</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-floating">
                                    <textarea class="form-control" asp-for="SpecialRequest" placeholder="Özel İstek" id="message" style="height: 100px"></textarea>
                                    <label for="message">Özel İstek</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <button class="btn btn-primary w-100 py-3" type="submit">Rezervasyon Yap</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
