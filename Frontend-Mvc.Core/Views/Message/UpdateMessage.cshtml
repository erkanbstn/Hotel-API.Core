@model MessageViewModel

@{
    ViewData["Title"] = "UpdateMessage";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Yeni Mesaj Ekle</h1>
<br />
<form method="post">
    <input asp-for="Id" class="form-control" type="hidden" />
    <span>Kişi</span>
    <input asp-for="Name" class="form-control" type="text" />
    <br />
    <span>Email</span>
    <input asp-for="Email" class="form-control" type="text" />
    <br />
    <span>İçerik</span>
    <input asp-for="Content" class="form-control" type="text" />
    <br />
    <input class="btn btn-primary" value="Değişiklikleri Kaydet" type="submit" />
</form>