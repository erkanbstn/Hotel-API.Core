@model List<ServiceViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h1>Servis Listesi</h1>
<br />
<table class="table table-hover">
    <tr>
        <th>
            #
        </th>
        <th>
            İkon
        </th>
        <th>
            Başlık
        </th>
        <th colspan="2">
            Aksiyon
        </th>
    </tr>
    @foreach (var Service in Model)
    {
        <tr>
            <td>
                @Service.Id
            </td>
            <td>
                @Service.Icon
            </td>
            <td>
                @Service.Title
            </td>
            <td>
                <a href="~/Service/DeleteService/@Service.Id" class="btn btn-danger">Sil</a>
                <a href="~/Service/UpdateService/@Service.Id" class="btn btn-success">Güncelle</a>
            </td>
        </tr>
    }
</table>
<br />
<a href="~/Service/AddService" class="btn btn-primary">Yeni Servis Ekle</a>
