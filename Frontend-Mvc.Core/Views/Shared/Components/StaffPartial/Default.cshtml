@model List<Frontend_Mvc.Core.ViewModels.Staff.StaffViewModel>
<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h6 class="section-title text-center text-primary text-uppercase">Takımımız</h6>
            <h1 class="mb-5">Çalışanlarımızı <span class="text-primary text-uppercase">Keşfedin</span></h1>
        </div>
        <div class="row g-4">
            @{
                double delay = 0.1;
            }
            @foreach (var staff in Model)
            {
                <div class="col-lg-3 col-md-6 wow fadeInUp" data-wow-delay="@delay s">
                    <div class="rounded shadow overflow-hidden">
                        <div class="position-relative">
                            <img class="img-fluid" src="~/hotel/img/@staff.CoverImage" alt="">
                            <div class="position-absolute start-50 top-100 translate-middle d-flex align-items-center">
                                <a class="btn btn-square btn-primary mx-1" href="@staff.Social1"><i class="fab fa-facebook-f"></i></a>
                                <a class="btn btn-square btn-primary mx-1" href="@staff.Social2"><i class="fab fa-twitter"></i></a>
                                <a class="btn btn-square btn-primary mx-1" href="@staff.Social3"><i class="fab fa-instagram"></i></a>
                            </div>
                        </div>
                        <div class="text-center p-4 mt-3">
                            <h5 class="fw-bold mb-0">@staff.Name</h5>
                            <small>@staff.Title</small>
                        </div>
                    </div>
                </div>
                delay += 0.2;
            }

        </div>
    </div>
</div>
<!-- Team End -->
