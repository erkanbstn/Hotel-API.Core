@model List<TestimonialViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Referans Listesi</h1>
<br />
<table class="table table-hover">
    <tr>
        <th>
            #
        </th>
        <th>
            Personel
        </th>
        <th>
            Başlık
        </th>
        <th>
            Görsel
        </th>
        <th colspan="2">
            Aksiyon
        </th>
    </tr>
    @foreach (var Testimonial in Model)
    {
        <tr>
            <td>
                @Testimonial.Id
            </td>
            <td>
                @Testimonial.Name
            </td>
            <td>
                @Testimonial.Title
            </td>
            <td>
                <img src="~/Images/@Testimonial.CoverImage" width="80px" height="80px" />
            </td>
            <td>
                <a href="~/Testimonial/DeleteTestimonial/@Testimonial.Id" class="btn btn-danger">Sil</a>
                <a href="~/Testimonial/UpdateTestimonial/@Testimonial.Id" class="btn btn-success">Güncelle</a>
            </td>
        </tr>
    }
</table>
<br />
<a href="~/Testimonial/AddTestimonial" class="btn btn-primary">Yeni Referans Ekle</a>

